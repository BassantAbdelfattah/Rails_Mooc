
<div class="container" style="width:40%; margin-top:60px;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: 'omb_loginForm') do |f| %>
<%= devise_error_messages! %>

<div class="input-group">
<span class="input-group-addon"><i class="fa fa-user"></i></span>
    <%= f.text_field :name, autofocus: true,class: "form-control",placeholder: "Name" %>
</div>
<span class="help-block"></span>
<div class="input-group">
    <span class="input-group-addon"><i class="fa fa-at"></i></span>
    <%= f.email_field :email, autofocus: true,class: "form-control",placeholder: "Email" %>
</div>
<span class="help-block"></span>

<div class="input-group">
<span class="input-group-addon"><i class="fa fa-user"></i></span>
    <%= f.text_field :gender, autofocus: true,class: "form-control",placeholder: "Gender" %>
</div>
<span class="help-block"></span>

<div class="input-group">
<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
    <%= f.text_field :date_of_birth, autofocus: true,class: "form-control",placeholder: "Date Of Birth" %>
</div>
<span class="help-block"></span>

<div class="input-group">
<span class="input-group-addon"><i class="fa fa-lock"></i></span>

    <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password" %>
</div>
<span class="help-block"></span>

<div class="input-group">
<span class="input-group-addon"><i class="fa fa-lock"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "Confirm Password" %>
</div>
<span class="help-block"></span>
<div class="input-group">
           <%= f.radio_button :is_instructor  , 0 ,:checked => true %>

           <%= f.label :is_instructor  , "Student" %>
           <%= f.radio_button :is_instructor , 1 %>
           <%= f.label :is_instructor  , "Instructor" %>
</div>
<span class="help-block"></span>

<div class="input-group">

    <%= f.label :image %><br>
    <%= f.file_field :image %>
</div>
<span class="help-block"></span>


    <%= f.submit "Sign up",class: "btn btn-lg btn-success btn-block log" %>

<% end %>
<span class="help-block"></span>


<%= render "users/shared/links" %>
</div>
