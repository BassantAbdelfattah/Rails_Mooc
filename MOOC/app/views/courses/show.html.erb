<div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
        <center>
            <h1><%= @course.title %></h1>

        </center>
        <p style="margin-left:30px;margin-bottom:30px;">
            <strong>Created by:</strong>
            <%= @course.try(:user).try(:name) %>
        </p>

        <% @lectures.each do |lecture| %>
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <%= image_tag lecture.image %>
                <div class="caption">
                    <p><%= lecture.title %></p>

                    <p>
                        <%= link_to'Show' , lecture,class: "fa fa-eye" %>
                    </p>
                </div>
            </div>
        </div>
        <% end %>

    </div>
</div>
<% if current_user.is_instructor %>
<% if @course.try(:user).try(:id)==current_user.id %>

<%= link_to 'Edit', edit_course_path(@course) %>
|
<% end %>
<% end %>
<%= link_to 'Back', courses_path %>
