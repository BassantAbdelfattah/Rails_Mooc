<p id="notice"><%= notice %></p>
<div class="container">
    <center>
<h1> Courses</h1>
</center>


      <div class="row">

    <% @courses.each do |course| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">

        <h3><%= course.title %></h3>
         <p><%= course.try(:user).try(:name) %></p>

        <p><%= link_to'Show' , course,class: "fa fa-eye" %>
            <% if current_user.is_instructor %>
            <% if course.user.id==current_user.id %>

        <%= link_to 'Edit', edit_course_path(course),class: "fa fa-pencil" %>
        <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' },class: "fa fa-trash-o" %></p>
            <% end %>
            <% end %>
    </div>
  </div>
</div>
    <% end %>
</div>


<br>
<% if current_user.is_instructor %>
<%= link_to 'New Course', new_course_path,class: "btn btn-success" %>
<% end %>
</div>
